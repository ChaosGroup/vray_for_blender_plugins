            "default": 0.0,
            "ui": {
                "enabled": true
            }
        },
        {
            "attr": "v",
            "desc": "V coordinate of the valid texture sector",
            "type": "FLOAT",
            "default": 0.0,
            "ui": {
                "enabled": true
            }
