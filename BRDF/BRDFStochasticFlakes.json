            "type": "ENUM",
            "items": [
                [
                    "0",
                    "Mapping channel",
                    ""
                ],
                [
                    "1",
                    "Triplanar",
                    ""
                ]
            ],
            "default": "1"
        },
        {
            "attr": "map_channel",
            "desc": "The mapping channel when the mapping_type is 0",
            "type": "INT",
            "default": 0
