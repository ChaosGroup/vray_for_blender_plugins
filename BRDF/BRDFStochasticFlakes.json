        {
            "attr": "brdf_type",
            "desc": "BRDF type (0 - Beckmann, 1 - GGX)",
            "type": "ENUM",
            "items": [
                [
                    "0",
                    "Beckmann",
                    ""
                ],
                [
                    "1",
                    "GGX",
                    ""
                ]
            ],
            "default": "1"
        },
        {
            "attr": "random_hue",
