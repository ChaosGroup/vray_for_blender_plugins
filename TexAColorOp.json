{
    "Desciption": "Color operations", 
    "ID": "TexAColorOp", 
    "Name": "Color Operations", 
    "Parameters": [
        {
            "attr": "color_a", 
            "default": [
                0.0, 
                0.0, 
                0.0
            ], 
            "desc": "The first color", 
            "type": "TEXTURE"
        }, 
        {
            "attr": "color_b", 
            "default": [
                0.0, 
                0.0, 
                0.0
            ], 
            "desc": "The second color", 
            "type": "TEXTURE"
        }, 
        {
            "attr": "mult_a", 
            "default": 1.0, 
            "desc": "Multiplier for the first color", 
            "type": "FLOAT_TEXTURE", 
            "ui": {
                "max": 1048576, 
                "min": -1048576, 
                "soft_max": 64, 
                "soft_min": 0
            }
        }, 
        {
            "attr": "mult_b", 
            "default": 1.0, 
            "desc": "Multiplier for the second color", 
            "type": "FLOAT_TEXTURE", 
            "ui": {
                "max": 1048576, 
                "min": -1048576, 
                "soft_max": 64, 
                "soft_min": 0
            }
        }, 
        {
            "attr": "result_alpha", 
            "default": 1.0, 
            "desc": "The alpha for the result; if not specified, the resulting alpha taken from the first color)", 
            "type": "FLOAT_TEXTURE", 
            "ui": {
                "max": 1048576, 
                "min": -1048576, 
                "soft_max": 64, 
                "soft_min": 0
            }
        }, 
        {
            "attr": "mode", 
            "default": "0", 
            "desc": "Which output should be considered for the 'Output'", 
            "items": [
                [
                    "0", 
                    "Result A", 
                    ""
                ], 
                [
                    "1", 
                    "Result B", 
                    ""
                ], 
                [
                    "2", 
                    "Product", 
                    ""
                ], 
                [
                    "3", 
                    "Sum", 
                    ""
                ], 
                [
                    "4", 
                    "Difference", 
                    ""
                ], 
                [
                    "5", 
                    "Power", 
                    ""
                ], 
                [
                    "6", 
                    "Division", 
                    ""
                ], 
                [
                    "7", 
                    "Minimum", 
                    ""
                ], 
                [
                    "8", 
                    "Maximum", 
                    ""
                ], 
                [
                    "9", 
                    "Absolute Difference", 
                    ""
                ]
            ], 
            "name": "Output Mode", 
            "type": "ENUM"
        }, 
        {
            "attr": "product", 
            "default": [
                1.0, 
                1.0, 
                1.0
            ], 
            "desc": "(color_a*mult_a)*(color_b*mult_b)", 
            "type": "OUTPUT_TEXTURE"
        }, 
        {
            "attr": "division", 
            "default": [
                1.0, 
                1.0, 
                1.0
            ], 
            "desc": "(color_a*mult_a)/(color_b*mult_b)", 
            "type": "OUTPUT_TEXTURE"
        }, 
        {
            "attr": "minimum", 
            "default": [
                1.0, 
                1.0, 
                1.0
            ], 
            "desc": "Min(color_a*mult_a , color_b*mult_b)", 
            "type": "OUTPUT_TEXTURE"
        }, 
        {
            "attr": "maximum", 
            "default": [
                1.0, 
                1.0, 
                1.0
            ], 
            "desc": "Max(color_a*mult_a , color_b*mult_b)", 
            "type": "OUTPUT_TEXTURE"
        }, 
        {
            "attr": "sum", 
            "default": [
                1.0, 
                1.0, 
                1.0
            ], 
            "desc": "(color_a*mult_a)+(color_b*mult_b)", 
            "type": "OUTPUT_TEXTURE"
        }, 
        {
            "attr": "difference", 
            "default": [
                1.0, 
                1.0, 
                1.0
            ], 
            "desc": "(color_a*mult_a)-(color_b*mult_b)", 
            "type": "OUTPUT_TEXTURE"
        }, 
        {
            "attr": "result_a", 
            "default": [
                1.0, 
                1.0, 
                1.0
            ], 
            "desc": "color_a*mult_a", 
            "type": "OUTPUT_TEXTURE"
        }, 
        {
            "attr": "result_b", 
            "default": [
                1.0, 
                1.0, 
                1.0
            ], 
            "desc": "color_b*mult_b", 
            "type": "OUTPUT_TEXTURE"
        }, 
        {
            "attr": "red", 
            "default": 1.0, 
            "desc": "(color_a*mult_a).r", 
            "type": "OUTPUT_FLOAT_TEXTURE"
        }, 
        {
            "attr": "green", 
            "default": 1.0, 
            "desc": "(color_a*mult_a).g", 
            "type": "OUTPUT_FLOAT_TEXTURE"
        }, 
        {
            "attr": "blue", 
            "default": 1.0, 
            "desc": "(color_a*mult_a).b", 
            "type": "OUTPUT_FLOAT_TEXTURE"
        }, 
        {
            "attr": "alpha", 
            "default": 1.0, 
            "desc": "(color_a*mult_a).a", 
            "type": "OUTPUT_FLOAT_TEXTURE"
        }, 
        {
            "attr": "intensity", 
            "default": 1.0, 
            "desc": "mult_a*(color_a.r+color_a.g+color_a.b)/3.0", 
            "type": "OUTPUT_FLOAT_TEXTURE"
        }, 
        {
            "attr": "power", 
            "default": [
                1.0, 
                1.0, 
                1.0
            ], 
            "desc": "(color_a*mult_a)^mult_b", 
            "type": "OUTPUT_TEXTURE"
        }
    ], 
    "Type": "TEXTURE", 
    "Widget": {
        "widgets": [
            {
                "attrs": [
                    {
                        "label": "Default Mode", 
                        "name": "mode"
                    }
                ], 
                "layout": "COLUMN"
            }
        ]
    }
}