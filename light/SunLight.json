                    ""
                ],
                [
                    "1",
                    "CIE Clear",
                    ""
                ],
                [
                    "2",
                    "CIE Overcast",
                    ""
                ],
                [ "3", "Hosek et al", "" ]
            ],
            "type": "ENUM"
        },
        {
            "attr": "shadows",
