                    ""
                ], 
                [
                    "FilterLanczos", 
                    "Lanczos", 
                    ""
                ], 
                [
                    "FilterMitNet", 
                    "Mitchell-Netravali", 
                    ""
                ], 
                [
                    "FilterSinc", 
                    "Sinc", 
                    ""
                ], 
                [
                    "FilterTriangle", 
                    "Triangle", 
                    ""
                ]
            ], 
            "skip": true, 
            "type": "ENUM"
        },
        {
            "attr": "render_mask_mode",
            "name": "Render Mask",
            "default": "0",
            "desc": "Sets the mode for the render mask",
            "items": [
                [ "0", "Disable", "" ],
                [ "2", "Objects", "" ],
                [ "3", "Object ID", "" ]
