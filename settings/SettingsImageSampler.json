{
    "Desciption": "", 
    "ID": "SettingsImageSampler", 
    "Name": "Image Sampler", 
    "Parameters": [
        {
            "attr": "type", 
            "default": "1",
            "desc": "The type of the image sampler", 
            "items": [
                [
                    "0", 
                    "Fixed", 
                    ""
                ], 
                [
                    "1", 
                    "Adaptive DMC", 
                    ""
                ], 
                [
                    "2", 
                    "Adaptive Subdivision", 
                    ""
                ], 
                [
                    "3", 
                    "Progressive", 
                    ""
                ]
            ], 
            "type": "ENUM"
        },
        {
            "attr": "min_shade_rate",
            "default": 6,
            "desc": "Control the number of rays shot for AA versus rays for other effects like glossy reflections, GI, area shadows etc. Higher values mean that less time will be spent on AA, and more effort will be put in the sampling of shading effects",
            "name": "Min. Shading Rate",
            "type": "INT",
            "ui": {
                "max": 1024,
                "min": 0,
                "soft_max": 64,
                "soft_min": 2
            }
        },
        {
            "attr": "fixed_subdivs", 
            "default": 1, 
            "desc": "Subdivs value for the fixed sampler", 
            "name": "Subdivs", 
            "type": "INT", 
            "ui": {
                "max": 1048576, 
                "min": -1048576, 
                "soft_max": 64, 
                "soft_min": 0
            }
        }, 
        {
            "attr": "fixed_per_pixel_filtering", 
            "default": false, 
            "desc": "true to enable per-pixel filtering for the fixed sampler", 
            "name": "Per Pixel Filtering", 
            "type": "BOOL"
        }, 
        {
            "attr": "dmc_minSubdivs", 
            "default": 1, 
            "desc": "Min. subdivs value for the adaptive DMC image sampler", 
            "name": "Min. Subdivs", 
            "type": "INT", 
            "ui": {
                "max": 1048576, 
                "min": -1048576, 
                "soft_max": 64, 
                "soft_min": 0
            }
        }, 
        {
            "attr": "dmc_maxSubdivs", 
            "default": 4,
            "desc": "Max. subdivs value for the adaptive DMC image sampler", 
            "name": "Max. Subdivs", 
            "type": "INT", 
            "ui": {
                "max": 1048576, 
                "min": -1048576, 
                "soft_max": 64, 
                "soft_min": 0
            }
        }, 
        {
            "attr": "dmc_threshold", 
            "default": 0.01,
            "desc": "Color threshold for the adaptive DMC image sampler", 
            "name": "Threshold", 
            "type": "FLOAT", 
            "ui": {
                "max": 1.0,
                "min": 0.0001,
                "soft_max": 0.1,
                "soft_min": 0.005
            }
        }, 
        {
            "attr": "dmc_show_samples", 
            "default": false, 
            "desc": "true to show the samples for the adaptive DMC image sampler", 
            "name": "Show Samples", 
            "type": "BOOL"
        }, 
        {
            "attr": "dmc_per_pixel_filtering", 
            "default": false, 
            "desc": "true to enable per-pixel filtering for the adaptive DMC image sampler", 
            "name": "Per Pixel Filtering", 
            "type": "BOOL"
        }, 
        {
            "attr": "subdivision_minRate", 
            "default": -1, 
            "desc": "", 
            "name": "Min. Rate", 
            "type": "INT", 
            "ui": {
                "max": 1048576, 
                "min": -1048576, 
                "soft_max": 64, 
                "soft_min": 0
            }
        }, 
        {
            "attr": "subdivision_maxRate", 
            "default": 2, 
            "desc": "", 
            "name": "Max. Rate", 
            "type": "INT", 
            "ui": {
                "max": 1048576, 
                "min": -1048576, 
                "soft_max": 64, 
                "soft_min": 0
            }
        }, 
        {
            "attr": "subdivision_jitter", 
            "default": true, 
            "desc": "", 
            "name": "Jitter", 
            "type": "BOOL"
        }, 
        {
            "attr": "subdivision_threshold", 
            "default": 0.15, 
            "desc": "", 
            "name": "Threshold", 
            "type": "FLOAT", 
            "ui": {
                "max": 1048576, 
                "min": -1048576, 
                "soft_max": 64, 
                "soft_min": 0
            }
        }, 
        {
            "attr": "subdivision_edges", 
            "default": false, 
            "desc": "", 
            "name": "Edges", 
            "type": "BOOL"
        }, 
        {
            "attr": "subdivision_normals", 
            "default": false, 
            "desc": "", 
            "name": "Normals", 
            "type": "BOOL"
        }, 
        {
            "attr": "subdivision_normals_threshold", 
            "default": 0.1, 
            "desc": "", 
            "name": "Normals Threshold", 
            "type": "FLOAT", 
            "ui": {
                "max": 1048576, 
                "min": -1048576, 
                "soft_max": 64, 
                "soft_min": 0
            }
        }, 
        {
            "attr": "subdivision_show_samples", 
            "default": false, 
            "desc": "", 
            "name": "Show Samples", 
            "type": "BOOL"
        }, 
        {
            "attr": "progressive_minSubdivs", 
            "default": 1, 
            "desc": "Min. subdivs value for the progressive image sampler", 
            "name": "Min. Subdivs", 
            "type": "INT", 
            "ui": {
                "max": 1048576, 
                "min": -1048576, 
                "soft_max": 64, 
                "soft_min": 0
            }
        }, 
        {
            "attr": "progressive_maxSubdivs", 
            "default": 100,
            "desc": "Max. subdivs value for the progressive image sampler", 
            "name": "Max. Subdivs", 
            "type": "INT", 
            "ui": {
                "max": 1048576, 
                "min": -1048576, 
                "soft_max": 64, 
                "soft_min": 0
            }
        }, 
        {
            "attr": "progressive_threshold", 
            "default": 0.01, 
            "desc": "Noise threshold for the progressive image sampler", 
            "name": "Threshold", 
            "type": "FLOAT", 
            "ui": {
                "max": 1048576, 
                "min": -1048576, 
                "soft_max": 64, 
                "soft_min": 0
            }
        }, 
        {
            "attr": "progressive_maxTime", 
            "default": 0, 
            "desc": "Max. render time for the progressive image sampler", 
            "name": "Max. Time", 
            "type": "FLOAT", 
            "ui": {
                "max": 1048576, 
                "min": -1048576, 
                "soft_max": 64, 
                "soft_min": 0
            }
        }, 
        {
            "attr": "progressive_bundleSize", 
            "default": 64, 
            "desc": "Bundle size for the progressive image sampler", 
            "name": "Bundle Size", 
            "type": "INT", 
            "ui": {
                "max": 1048576, 
                "min": -1048576, 
                "soft_max": 64, 
                "soft_min": 0
            }
        }, 
        {
            "attr": "progressive_showMask", 
            "default": false, 
            "desc": "If true, the AA mask will be rendered", 
            "name": "Show Mask", 
            "type": "BOOL"
        }, 
        {
